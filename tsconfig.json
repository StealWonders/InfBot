{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2018",
      "outDir": "build",
      "lib": [
        "ESNext",
        "ESNext.Array",
        "ESNext.AsyncIterable",
        "ESNext.Intl",
        "ESNext.Symbol",
        "DOM"
      ],
      "sourceMap": false,
      "inlineSourceMap": true,
      "inlineSources": true,
      "incremental": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }